  index = 29
  [keys.widget]
    id = "button"
  [keys.action]
    deck = "relative/path/to/another_left.deck"

# Swipe to right
[[keys]]
  index = 28
  [keys.widget]
    id = "button"
  [keys.action]
    deck = "relative/path/to/another_right.deck"

