#### Screen Segment 0 ####

# Screen + short touch
[[keys]]
  index = 20
  [keys.widget]
    id = "button"
    segment = 0
    [keys.widget.config]
      icon = "assets/volume-high.png"
  [keys.action]
    keycode = "Mute"

# Long touch
[[keys]]
  index = 24
  [keys.widget]
    id = "button"
  [keys.action]
    keycode = "Mute"

# Knob short and long press
