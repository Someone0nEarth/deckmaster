[[keys]]
  index = 0
  [keys.widget]
    id = "pulseAudioControl"
    interval = 1000
    [keys.widget.config]
      appName = "Firefox"
      mode = "up"
      mode_hold = "mute"
      showTitle = false
      useAppIcon = true

