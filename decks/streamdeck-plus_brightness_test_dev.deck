[[keys]]
  index = 0
  [keys.widget]
    id = "time"
    [keys.widget.config]
      format = "%H:%i;%l;%d"
      font = "bold;regular;thin"
      layout = "0x0+120x36;0x40+120x24;0x70+120x24"

